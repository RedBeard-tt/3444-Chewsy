<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/recipeName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="6dp"
        android:text="Recipe Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="52dp"
    android:layout_marginTop="15dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/recipeName"
    android:src="@android:drawable/ic_input_add" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="7dp"
    android:layout_marginTop="19dp"
    android:text="Ingredients"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/imageView" />

    <TextView
        android:id="@+id/instructionList"
        android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="7dp"
    android:text="Instructions will appear here"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="7dp"
    android:layout_marginTop="10dp"
    android:text="Instructions"
    app:layout_constraintBottom_toTopOf="@id/instructionList"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/ingredientList" />

    <TextView
        android:id="@+id/ingredientList"
        android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="7dp"
    android:text="Ingredients will appear here"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/textView5" />
</androidx.constraintlayout.widget.ConstraintLayout>