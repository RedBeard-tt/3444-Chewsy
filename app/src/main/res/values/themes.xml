<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.ChewsyUI" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary color (matching your cobaltBlue) -->
        <item name="colorPrimary">@color/cobaltBlue</item>
        <item name="colorPrimaryVariant">@color/cobaltBlue</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary color (matching your cobaltBlue again) -->
        <item name="colorSecondary">@color/cobaltBlue</item>
        <item name="colorSecondaryVariant">@color/lightBlue</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Other MaterialComponents attributes -->
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnBackground">@android:color/black</item>
        <item name="colorOnSurface">@android:color/black</item>
    </style>
</resources>